<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite thread-count="3" name="LambaTestNGTestSuite" parallel="classes">

	<parameter name="url" value="https://www.lambdatest.com/selenium-playground/"/>
	
	<test name="ChromeTest">
  		<parameter name="browser" value="Chrome"/>
  		<parameter name="version" value="88.0"/>
  		<parameter name="platform" value="Windows 10"/>
    	<classes>
    		<class name="testCases.PageTitleValidation"/>
			<class name="testCases.CheckboxClick"/>
      		<class name="testCases.JavascriptAlertValidation"/>
    	</classes>
  	</test>
  	
  	<test name="MicrosoftEdgeTest">
  		<parameter name="browser" value="MicrosoftEdge"/>
  		<parameter name="version" value="87.0"/>
  		<parameter name="platform" value="macOS Sierra"/>
    	<classes>
      		<class name="testCases.PageTitleValidation"/>
			<class name="testCases.CheckboxClick"/>
      		<class name="testCases.JavascriptAlertValidation"/>
    	</classes>
  	</test>
  	
  	<test name="FirefoxTest">
  		<parameter name="browser" value="Firefox"/>
  		<parameter name="version" value="82.0"/>
  		<parameter name="platform" value="Windows 7"/>
    	<classes>
      		<class name="testCases.PageTitleValidation"/>
			<class name="testCases.CheckboxClick"/>
      		<class name="testCases.JavascriptAlertValidation"/>
    	</classes>
  	</test>
  	
  	<test name="InternetExplorerTest">
  		<parameter name="browser" value="Internet Explorer"/>
  		<parameter name="version" value="11.0"/>
  		<parameter name="platform" value="Windows 10"/>
    	<classes>
      		<class name="testCases.PageTitleValidation"/>
			<class name="testCases.CheckboxClick"/>
      		<class name="testCases.JavascriptAlertValidation"/>
    	</classes>
  	</test>

</suite> <!-- Suite -->
